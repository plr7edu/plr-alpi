#!/bin/bash

# Script Run Location = ~/root/Desktop/root-user-configs-backup/

tput bold
echo -e "\e[1;34mDelete Backup Configs...\e[1;37m";
tput sgr0

cd ../../
rm -rf .bashrc .bash_profile .config 

tput bold
echo -e "\e[1;34mRestore root user backup configs...\e[1;37m";
tput sgr0

cd -
cp -ir .config .bashrc .bash_profile ../../
cp appearance_dark.png ../../Pictures/

