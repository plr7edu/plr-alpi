#!/bin/bash

# Script Run Location = ~/root/Desktop/Root-User-Configs-Backup/

tput bold
echo -e "\e[1;34mRemove old Configs...\e[1;37m";
tput sgr0

rm -rf *.txt
rm -rf .config .bash_profile .bashrc

tput bold
echo -e "\e[1;34mBackup new config files...\e[1;37m";
tput sgr0

cd ../../
cp -r .bashrc .bash_profile .config ~/Desktop/Root-User-Configs-Backup/
date > ~/Desktop/Root-User-Configs-Backup/"Backup_time=$(date +"%Y.%m.%d-%I:%M%p").txt"



